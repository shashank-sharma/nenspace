# Plasmo Environment Variables
# Copy this file to .env and update the values

# Public environment variables (accessible in all contexts)
PLASMO_PUBLIC_DEFAULT_BACKEND_URL=http://localhost:8090
PLASMO_PUBLIC_APP_NAME=Nenspace Extension
PLASMO_PUBLIC_VERSION=0.0.1

# Build-time environment variables
NODE_ENV=development
PLASMO_TARGET=chrome-mv3

# Feature flags
PLASMO_PUBLIC_ENABLE_DEBUG_MODE=true
PLASMO_PUBLIC_ENABLE_ANALYTICS=false
PLASMO_PUBLIC_ENABLE_REALTIME=true

# API Configuration
PLASMO_PUBLIC_API_TIMEOUT=10000
PLASMO_PUBLIC_HEALTH_CHECK_INTERVAL=30000
PLASMO_PUBLIC_REALTIME_MAX_RETRIES=10
